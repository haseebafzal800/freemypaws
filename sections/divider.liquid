<div class="divider"></div>
{% style %}
  @media only screen and (min-width: 768px) {
    .divider {
      height:  {{ section.settings.height_size }}px;
    }
  }
  @media only screen and (max-width: 768px) {
    .divider {
      height:  {{ section.settings.height_size_mobile }}px;
    }
  }
{% endstyle %}
{% schema %}
{
  "name": "Divider",
  "tag": "div",
  "class": "content-divider",
  "settings": [
    {
      "type": "range",
      "id": "height_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Height",
      "default": 80
    },
    {
      "type": "range",
      "id": "height_size_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile Height",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Divider"
    }
  ]
}
{% endschema %}

