<div class="article-detail container-wrapper main-category-blog blog-main-wrapper poppins-font">
  <div class="container">
    {% if section.settings.show_breadcrumbs == true %}
      <div class="category-breadcrumbs">
        {% render 'breadcrumbs-blogs' %}
      </div>
    {% endif %}

    <div class="mb-wrapper">
      <div class="mb-left">
        {% render 'blog-detail', col_image_1: section.settings.col_image_1, col_image_2: section.settings.col_image_2, col_image_3: section.settings.col_image_3,
          show_article_module: section.settings.show_article_module, one_line_text: section.settings.one_line_text, show_pagination: section.settings.show_pagination, 
          show_listen_audio: section.settings.show_listen_audio, show_article_img: section.settings.show_article_img, show_author: section.settings.show_author, 
          lindsay_signature: section.settings.card_signature, show_editor: section.settings.show_editor %}
      </div>
      <div class="mb-right">
        {% render 'lindsay-card', card_img: section.settings.card_img, card_headline: section.settings.card_headline, card_intro: section.settings.card_intro, card_signature: section.settings.card_signature, card_follow: section.settings.card_follow, show_social_icons: section.settings.show_social_icons %}
        {% render 'search-articles', search_btn: section.settings.search_btn, search_heading: section.settings.search_heading %}
        {% render 'categories-blogs', category_heading: section.settings.category_heading, category_link: section.settings.category_link %}
        {% render 'tower-ad', tower_img_mob: section.settings.tower_img_mob, show_tower_ad: section.settings.show_tower_ad, tower_img: section.settings.tower_img, tower_url: section.settings.tower_url %}
        {% if section.settings.show_related_articles %}
          {% render "related-articles" %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script defer src="//code.responsivevoice.org/responsivevoice.js"></script>
<script>

  $(document).ready(function() {
    $('.article-voice').click(function() {
      $(this).toggleClass("active");
      if (responsiveVoice.isPlaying()) {
        responsiveVoice.cancel();
      } else {
        responsiveVoice.speak('{{ article.content | strip_html | escape | json }}');
      }
    });
  })
</script>


