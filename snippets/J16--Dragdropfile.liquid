    .J16--File_Field .J16--file_input {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        cursor: pointer;
        opacity: 0;
    }
    .J16--File_Field .J16--file_input:focus {
        outline: none;
    }
    .J16--fillMsg {
        display: none;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
    .J16--fileIcon {
        margin-right: 15px;
    }
    @media (max-width: 768px) {
        .J16--File_Field {
            padding: 15px 20px 15px 15px;
            border-width: 2px;
        }
    }
</style>

<script>
    $(document).ready(function() {
        const $droparea = $('.J16--File_Field');
        const $delete = $('.J16--delete');

        $(document).on('dragover dragenter click', '.J16--file_input', function () {
            $(this).parent().addClass('is-active');
        });

        $(document).on('dragleave blur drop', '.J16--file_input', function () {
            $(this).parent().removeClass('is-active');
        });

        $(document).on('change', '.J16--file_input', function () {
            let filesCount = $(this)[0].files.length;
            let $textContainer = $(this).parent().children('.J16--fillMsg');

            if (filesCount === 1) {
                let fileName = $(this).val().split('\\').pop();
                let fileFormat = $(this).val().split('.').pop().toLowerCase();

                if (fileFormat == 'pdf') {
                    $textContainer.children('.J16--fileIcon').attr('src', 'https://free-my-paws.myshopify.com/cdn/shop/files/J16--pdf.svg?v=1688125026');
                    $(this).parents('.J16--File_Field').removeClass('error');
                    $textContainer.children('.J16--content').text(fileName);
                } else if (fileFormat == 'doc' || fileFormat == 'docx') {
                    $(this).parents('.J16--File_Field').removeClass('error');
                    $textContainer.children('.J16--fileIcon').attr('src', 'https://free-my-paws.myshopify.com/cdn/shop/files/J16--doc.svg?v=1688125026');
                    $textContainer.children('.J16--content').text(fileName);
                } else {
                    $(this).parent().children('.J16--file_input').val(null);
                    $(this).parents('.J16--File_Field').addClass('error');
                    $textContainer.children('.J16--fileIcon').attr('src', 'https://free-my-paws.myshopify.com/cdn/shop/files/error-file-icon.svg?v=1688125026');
                    $textContainer.children('.J16--content').text('File format is wrong. Please select a pdf or doc again.');
                }
                $(this).parent().children('.J16--emptyMsg').css('display', 'none');
                $(this).parent().children('.J16--fillMsg').css('display', 'flex');
                $(this).parent().children('.J16--delete').css('display', 'inline-block');
            } else if (filesCount === 0) {
                $(this).parents('.J16--File_Field').removeClass('error');
                $(this).parent().children('.J16--emptyMsg').css('display', 'flex');
                $(this).parent().children('.J16--fillMsg').css('display', 'none');
                $(this).parent().children('.J16--delete').css('display', 'none');
            }
        });

        $delete.on('click', function () {
            $(this).parent().children('.J16--file_input').val(null);
            $(this).parent().children('.J16--emptyMsg').css('display', 'flex');
            $(this).parent().children('.J16--fillMsg').css('display', 'none');
            $(this).parent().children('.J16--delete').css('display', 'none');
        });
    })
</script>