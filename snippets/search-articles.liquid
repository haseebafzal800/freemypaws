<div class="search-articles">
  {% if search_heading %}
    <strong class="card-headline">{{ search_heading }}</strong>
  {% endif %}

  <form
    action="/search"
    method="get"
    role="search">
    <input
      type="hidden"
      name="type"
      value="article" />
    <div class="input-group--underline">
      <div class="input-group">
        <div class="search-icon">
          {% render 'svg-search' %}
        </div>
        <input
          class="input-group__field"
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="E.g. How to crate train"
          aria-label="E.g. How to crate train">
      </div>
      <button type="submit" class="btn btn--clear btn--square">
        {{ search_btn }}
      </button>
    </div>
  </form>
</div>